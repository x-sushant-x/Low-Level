/**
 * 16-bit multiplexor: 
 * for i = 0, ..., 15:
 * if (sel = 0) out[i] = a[i], else out[i] = b[i]
 */
CHIP Mux16 {
    IN a[16], b[16], sel;
    OUT out[16];

    PARTS:
    Not(in=sel, out=nSel);
    And16Broadcast(a=a, b=nSel, out=x);
    And16Broadcast(a=b, b=sel, out=y);
    Or16(a=x, b=y, out=out);
}
